
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      // Allow user to write to their own document
      allow write: if isSignedIn() && request.auth.uid == userId;
      // Allow user to read their own document
      allow get: if isSignedIn() && request.auth.uid == userId;
      // Allow any signed-in user to list (search) the collection for email search
      allow list: if isSignedIn();
    }

    match /user_profiles/{userProfileId} {
      // Any signed-in user can read public profiles
      allow read: if isSignedIn();
      // Only the owner can write to their own profile
      allow write: if isSignedIn() && request.auth.uid == userProfileId;
    }

    match /user_profiles/{userProfileId}/portfolio_items/{itemId} {
      // Allow anyone to read portfolio items, as they are part of a public profile.
      allow read: if isSignedIn();
      // Only the profile owner can create, update, or delete their portfolio items.
      allow write: if isSignedIn() && request.auth.uid == userProfileId;
    }

    match /user_profiles/{userProfileId}/statuses/{statusId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.auth.uid == userProfileId;
        allow update: if isSignedIn() && request.auth.uid == userProfileId;
    }
    
    // This allows the collectionGroup query for the story feed, but is still secure
    // because the read on the individual document is checked.
    match /{path=**}/statuses/{statusId} {
      allow read: if isSignedIn();
    }

    match /follows/{followId} {
      // Explicitly allow both list and get for any signed-in user
      allow read: if isSignedIn();
      // Users can only create/delete their own follow actions.
      // The document ID must be followerId_followingId
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.followerId && followId == request.resource.data.followerId + '_' + request.resource.data.followingId;
      allow delete: if isSignedIn() && request.auth.uid == followId.split('_')[0];
    }

    match /posts/{postId} {
      allow read: if isSignedIn();
      // Any authenticated user can create a post if they are the author.
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      // Only the author of an existing post can update or delete it.
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    match /shorts/{shortId} {
      // Any signed-in user can read shorts
      allow read: if isSignedIn();
      // Only the owner can write a short
      allow write: if isSignedIn() && request.auth.uid == request.resource.data.userId;
    }

    match /studio_profiles/{studioProfileId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == request.resource.data.userProfileId;
    }

    match /projects/{projectId} {
      // Allow any signed-in user to read (get, list) projects.
      // The application logic will filter projects for the specific user.
      allow read: if isSignedIn();
      // Allow users to create, update, and delete projects they own.
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    match /studio_profiles/{studioProfileId}/bookings/{bookingId} {
      // Any signed-in user can see what's booked.
      allow read: if isSignedIn();
      // Any signed-in user can create a booking for themselves.
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      // Future rules: allow owner to delete/update. For now, this is secure.
    }

    match /conversations/{conversationId} {
      // Allow user to get/update a specific conversation if they are a participant
      allow get, update: if isSignedIn() && request.auth.uid in resource.data.participantIds;
      // Allow user to list conversations (client-side query must filter for participation)
      allow list: if isSignedIn();
      // Allow create if the user is creating a conversation for themselves
      allow create: if isSignedIn() && request.auth.uid in request.resource.data.participantIds;
    }

    match /conversations/{conversationId}/messages/{messageId} {
      function isParticipant() {
        return request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
      }
      // Allow reading and creating messages if the user is part of the parent conversation
      allow read, create: if isSignedIn() && isParticipant();
      allow delete: if isSignedIn() && resource.data.senderId == request.auth.uid && isParticipant();
    }
  }
}
