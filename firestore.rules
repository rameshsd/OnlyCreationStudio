rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Lock down all reads by default
    match /{document=**} {
      allow read: if false;
    }

    // Allow public write access to studios, partners, and quotes collections for onboarding
    match /studios/{studioId} {
      allow write: if true; 
    }

    match /partners/{partnerId} {
      allow write: if true;
    }
    
    match /quotes/{quoteId} {
      allow write: if true;
    }

    // Allow authenticated users to read from collections for the admin panel
    match /studios/{studioId} {
      allow read: if request.auth != null;
    }

    match /partners/{partnerId} {
      allow read: if request.auth != null;
    }

    match /quotes/{quoteId} {
       allow read: if request.auth != null;
    }
  }
}
