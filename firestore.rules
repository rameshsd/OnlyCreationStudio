rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Lock down all reads by default, except for collections explicitly opened up.
    match /{document=**} {
      allow read, write: if false;
    }

    // USER PROFILES
    // Allow users to read and write to their own profile.
    match /user_profiles/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // POSTS
    // Allow any authenticated user to read posts.
    // Allow users to write only to their own posts.
    match /posts/{postId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // STORIES
    // Allow any authenticated user to read all stories (for the feed).
    // Allow users to write only their own stories.
    match /{path=**}/stories/{storyId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }

    // STUDIO PROFILES
    // Allow any authenticated user to read studio profiles.
    // Allow users to write only to their own studio profile.
    match /studio_profiles/{studioId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == request.resource.data.userProfileId;
    }

    // PROJECTS
    // Allow users to read and write only their own projects.
    match /projects/{projectId} {
      allow read, write: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
    }

    // The following are from the previous ruleset, keeping them for now.
    match /partners/{partnerId} {
      allow write: if true;
      allow read: if request.auth != null;
    }
    
    match /quotes/{quoteId} {
      allow write: if true;
      allow read: if request.auth != null;
    }
  }
}
