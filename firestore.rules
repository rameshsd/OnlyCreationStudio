
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read, write: if isSignedIn() && request.auth.uid == userId;
    }

    match /user_profiles/{userProfileId} {
      // Any signed-in user can read public profiles
      allow read: if isSignedIn();
      // Only the owner can write to their own profile
      allow write: if isSignedIn() && request.auth.uid == userProfileId;
    }

    match /user_profiles/{userProfileId}/statuses/{statusId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn() && request.auth.uid == userProfileId;
        allow update: if isSignedIn() && request.auth.uid == userProfileId;
    }
    
    // This allows the collectionGroup query for the story feed, but is still secure
    // because the read on the individual document is checked.
    match /{path=**}/statuses/{statusId} {
      allow read: if isSignedIn();
    }

    match /follows/{followId} {
      allow read: if isSignedIn();
      // Users can only create/delete their own follow actions.
      // The document ID must be followerId_followingId
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.followerId && followId == request.resource.data.followerId + '_' + request.resource.data.followingId;
      allow delete: if isSignedIn() && request.auth.uid == followId.split('_')[0];
    }

    match /posts/{postId} {
      allow read: if isSignedIn();
      // Any authenticated user can create a post if they are the author.
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      // Only the author of an existing post can update or delete it.
      allow update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    match /shorts/{shortId} {
      // Any signed-in user can read shorts
      allow read: if isSignedIn();
      // Only the owner can write a short
      allow write: if isSignedIn() && request.auth.uid == request.resource.data.userId;
    }

    match /studio_profiles/{studioProfileId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == request.resource.data.userProfileId;
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow write: if isSignedIn() && request.auth.uid == request.resource.data.ownerId;
    }

    match /studio_profiles/{studioProfileId}/bookings/{bookingId} {
      // Any signed-in user can see what's booked.
      allow read: if isSignedIn();
      // Any signed-in user can create a booking for themselves.
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.userId;
      // Future rules: allow owner to delete/update. For now, this is secure.
    }
  }
}

    