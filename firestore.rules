
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to read most collections
    match /user_profiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    match /posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    match /studio_profiles/{studioId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == request.resource.data.userProfileId;
    }
    
    match /projects/{projectId} {
       allow read, write: if request.auth.uid == request.resource.data.ownerId;
    }
    
    // Allow users to manage their own stories and portfolio items
    match /user_profiles/{userId}/{subcollection}/{itemId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
