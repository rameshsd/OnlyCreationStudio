
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow authenticated users read access to everything except writes
    // You can tighten later.
    match /{document=**} {
      allow read: if request.auth != null;
    }

    // Allow users to write their own posts
    match /posts/{postId} {
      allow write: if request.auth != null
        && request.auth.uid == request.resource.data.userId;
    }

    // Allow users to write their own studio profiles
    match /studio_profiles/{studioId} {
      // Use userProfileId for studio ownership
      allow write: if request.auth != null
        && request.auth.uid == request.resource.data.userProfileId;
    }

    // Allow users to write their own user profile
    match /user_profiles/{userId} {
      allow write: if request.auth != null
        && request.auth.uid == userId;
    }
    
    // Allow users to write to their own portfolio
    match /user_profiles/{userId}/portfolio_items/{itemId} {
       allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to write their own stories in collectionGroup
    match /user_profiles/{userId}/stories/{storyId} {
      allow write: if request.auth != null
        && request.auth.uid == userId;
    }
    
    // Allow project creation and updates by owner
    match /projects/{projectId} {
        allow write: if request.auth != null && request.auth.uid == request.resource.data.ownerId;
    }
  }
}
